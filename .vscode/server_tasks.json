{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "$(device-desktop) Client",
            "type": "shell",
            "command": "./scripts/choose_tasks.sh",
            "args" : ["CLIENT"],
            "options": {
                "statusbar": {
                    "color": "#e1e3ff"
                },
            }
        },        {
            "label": "$(server) SERVER",
            "type": "shell",
            "command": "./scripts/choose_tasks.sh",
            "args" : ["SERVER"],
            "options": {
                "statusbar": {
                    "color": "#e1e3ff"
                },
            }
        },
        {
            "label": "||",
            "command": "./scripts/pass.sh",
            "args": ["0"]
        },
        {
            "label": "Frontend:",
            "command": "./scripts/pass.sh",
            "options": {
                "statusbar": {
                    "color": "#e1e3ff"
                },
            }
        },
        {
            "label": "$(testing-debug-icon) Run",
            "type": "shell",
            "command": "yarn",
            "args" : ["start"],
            "options": {
                "statusbar": {
                    "color": "#b4b9ff"
                },
                "cwd": "${workspaceFolder}/server/frontend/"
            }
        },
        {
            "label": "$(test-view-icon) Test",
            "type": "shell",
            "command": "yarn",
            "args" : ["test", "--verbose"],
            "options": {
                "statusbar": {
                    "color": "#b4ffbe"
                },
                "cwd": "${workspaceFolder}/server/frontend/"
            }
        },
        {
            "label": "$(testing-show-as-list-icon) Coverage",
            "type": "shell",
            "command": "yarn",
            "args" : ["test", "--coverage", "--watchAll=false"],
            "options": {
                "statusbar": {
                    "color": "#58D260"
                },
                "cwd": "${workspaceFolder}/server/frontend/"
            }
        }, 
        {
            "label": "||",
            "command": "./scripts/pass.sh",
            "args": ["1"]
        },
        {
            "label": "Backend:",
            "command": "./scripts/pass.sh",
            "options": {
                "statusbar": {
                    "color": "#e1e3ff"
                },
            }
        },
        {
            "label": "$(testing-debug-icon) Run ",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args" : ["-m", "uvicorn", "main:app", "--reload"],
            "options": {
                "statusbar": {
                    "color": "#b4b9ff"
                },
                "cwd": "${workspaceFolder}/server/backend/src"
            }
        },
        {
            "label": "$(test-view-icon) Test ",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args" : ["-m", "pytest"],
            "options": {
                "statusbar": {
                    "color": "#b4ffbe"
                },
                "cwd": "${workspaceFolder}/server/backend/"
            }
        },
        {
            "label": "$(testing-show-as-list-icon) Coverage ",
            "type": "shell",
            "command": "../../scripts/coverage_python.sh",
            "options": {
                "statusbar": {
                    "color": "#58D260"
                },
                "cwd": "${workspaceFolder}/server/backend/"
            }
        }, 
    ]
}