{
    "python.testing.pytestArgs": [],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.flake8Enabled": true,
    "autoDocstring.docstringFormat": "google",
    "editor.formatOnSave": true,
    "python.languageServer": "Pylance",
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=100"
    ],
    "python.sortImports.args": [
        "--profile",
        "black"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "files.exclude": {
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.coverage": true,
        "**/coverage.xml": true,
    },
    "editor.semanticTokenColorCustomizations": {
        "rules": {
            "variable:python": "#d4d4d4",
            "variable.readonly:python": "#D19A66",
            "selfParameter": "#6090f1",
            "property:python": "#d4d4d4"
        }
    },
    "sqltools.connections": [
        {
            "previewLimit": 50,
            "server": "localhost",
            "port": 5432,
            "driver": "PostgreSQL",
            "name": "Bitrender-DEV",
            "database": "bitrender-DEV",
            "username": "postgres",
            "password": "postgres"
        },
        {
            "previewLimit": 50,
            "server": "localhost",
            "port": 5433,
            "driver": "PostgreSQL",
            "name": "Bitrender-TEST",
            "database": "bitrender-TEST",
            "username": "postgres",
            "password": "postgres"
        }
    ],
    "workbench.colorCustomizations": {
        "editor.foldBackground": "#00b7ff08"
    },
    "todo-tree.regex.enableMultiLine": true,
    "todo-tree.regex.regex": "( (//|#|\"\"\"|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS))",
    "todo-tree.tree.showBadges": true,
    "todo-tree.tree.showCountsInTree": false
}