{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BPY",
            "type": "shell",
            "command": "./scripts/choose_tasks.sh",
            "args" : ["BPY"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "CLIENT",
            "type": "shell",
            "command": "./scripts/choose_tasks.sh",
            "args" : ["CLIENT"]
        },        {
            "label": "SERVER",
            "type": "shell",
            "command": "./scripts/choose_tasks.sh",
            "args" : ["SERVER"]
        },
        {
            "label": "||",
            "command": "./scripts/pass.sh",
            "args": ["0"]
        },
        {
            "label": "$(cloud-download) Download bpy",
            "type": "shell",
            "command": "./scripts/download_bpy.sh",
            "options": {
                "statusbar": {
                    "color": "#b9beff"
                },
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "$(versions) Change version",
            "type": "shell",
            "command": "./scripts/change_bpy_version.sh",
            "args": ["${input:version}"],
            "options": {
                "statusbar": {
                    "color": "#b9ffba"
                },
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "$(cloud-download) Download libraries",
            "type": "shell",
            "command": "./scripts/download_libraries.sh",
            "args": ["${input:libraryVersion}"],
            "options": {
                "statusbar": {
                    "color": "#b9beff"
                },
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "$(extensions-configure-recommended) Configure bpy",
            "type": "shell",
            "command": "./scripts/configure_bpy.sh",
            "args": ["${input:optixLocation}"],
            "options": {
                "statusbar": {
                    "color": "#fffeb9"
                },
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "$(extensions-manage) Build bpy",
            "type": "shell",
            "command": "./scripts/build_bpy.sh",
            "options": {
                "statusbar": {
                    "color": "#ffcfb9"
                },
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "$(terminal-view-icon) Install bpy",
            "type": "shell",
            "command": "./scripts/install_bpy_venv.sh",
            "args": ["${input:pythonFolder}"],
            "options": {
                "statusbar": {
                    "color": "#ffb9b9"
                },
                "cwd": "${workspaceFolder}"
            }
        }
    ],
    "inputs" : [
        {
            "id" : "version",
            "type": "pickString",
            "description" : "Blender version",
            "options" : ["v2.90.1"],
            "default" : "v2.90.1"
        },
        {
            "id" : "libraryVersion",
            "type": "pickString",
            "description" : "Library version",
            "options" : ["2.90", "2.91", "2.92", "2.93"],
            "default" : "2.90"
        },
        {
            "id" : "pythonFolder",
            "type" :"promptString",
            "description": "Input python site-packages location."
        },
        {
            "id": "optixLocation",
            "type": "promptString",
            "description": "Input Optix SDK location."
        }
    ]
}