{
    "name": "Rendering server - client",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "..",
    },
    "runArgs": [
        "--cap-add=SYS_ADMIN",
        "--device=/dev/fuse"
    ],
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ryanluker.vscode-coverage-gutters",
    ],
    "postCreateCommand": "pip install -r .devcontainer/requirements.txt",
    "waitFor": "postCreateCommand",
    "remoteUser": "vscode",
    "forwardPorts": [
        8000
    ],
    "settings": {
        "terminal.integrated.profiles.linux": {
            "fish": {
                "path": "/usr/bin/fish"
            }
        },
        "terminal.integrated.defaultProfile.linux": "fish",
        "editor.formatOnSave": true,
        "python.languageServer": "Pylance",
        "python.formatting.provider": "black",
        "python.linting.pylintEnabled": true,
        "python.linting.enabled": true,
        "python.linting.mypyEnabled": true,
        "python.linting.mypyArgs": [
            " --config-file=mypy.ini"
        ],
        "python.testing.pytestArgs": [
            "src"
        ],
        "python.linting.pylintArgs": [
            "--disable=C0111",
            "--extension-pkg-whitelist=pyfuse3"
        ],
        "editor.semanticTokenColorCustomizations": {
            "rules": {
                "variable:python": "#d4d4d4",
                "variable.readonly:python": "#D19A66",
                "selfParameter": "#6090f1",
                "property:python": "#d4d4d4"
            }
        },
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        "files.exclude": {
            "**/.git": true,
            "**/*.pyc": true,
            "**/__pycache__": true,
            "**/venv": true,
            "**/.pytest_cache": true,
            "**/.mypy_cache": true,
            "coverage.xml": true,
            ".coverage": true,
        },
        "material-icon-theme.files.associations": {
            ".coveragerc": "Settings"
        }
    },
}