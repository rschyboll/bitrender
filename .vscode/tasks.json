{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build bpy",
            "type": "shell",
            "command": "./scripts/build_bpy.sh",
            "args" : ["${input:version}"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Client",
            "type": "shell",
            "command": "${config:python.pythonPath} ${workspaceFolder}/client/src/main.py",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Install bpy into python",
            "type": "shell",
            "command": "./scripts/install_bpy_venv.sh",
            "args": ["${input:pythonFolder}"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ],
    "inputs" : [
        {
            "id" : "version",
            "type": "pickString",
            "description" : "Blender version",
            "options" : ["v2.90.1"],
            "default" : "v2.90.1"
        },
        {
            "id" : "pythonFolder",
            "type" :"promptString",
            "description": "Input python site-packages location."
        }
    ]
}